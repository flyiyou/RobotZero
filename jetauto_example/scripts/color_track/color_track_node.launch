<?xml version="1.0"?>
<!--颜色追踪-->
<launch>
    <arg name="start"           default="true"/>
    <arg name="enable_display"  default="false"/>
    <arg name="use_depth_cam"   default="true"/>
    <!--底盘驱动(chassis driver)-->
    <include file="$(find jetauto_controller)/launch/jetauto_controller.launch"/>
    <include file="$(find jetauto_kinematics)/launch/kinematics_node.launch"/>
    <include file="$(find jetauto_example)/scripts/color_detect/color_detect_node.launch">
        <arg name="enable_display"  value="$(arg enable_display)"/>
        <arg name="use_depth_cam"   value="$(arg use_depth_cam)"/>
    </include>
    <node pkg="jetauto_example" type="color_track_node.py" name="color_track" output="screen">
        <param name="start" value="$(arg start)"/>
    </node>
</launch>
